{% extends "layout/base.twig" %}

{% from "macro/common.twig" import primary_button, secondary_button, select, checkbox_field, textarea, alert %}

{% block body %}
    {% include 'include/error.twig' %}

    <form method="post">
{#        <h1 class="mb-4 text-3xl font-bold leading-tight">Format</h1>#}

        <div class="mb-4 flex">
            <span class="mr-2">{{ primary_button("Format", size="lg", icon="ok", attrs={ "type": "submit" }) }}</span>
            <span class="mr-4">{{ secondary_button("Copy", size="lg", icon="clipboard", attrs={"onclick": "$.copy($('#content').value())"}) }}</span>
            <span class="mr-4 shadow-sm">
            {{ select("ext", ext, [
                {"key": "ts", "value": "TypeScript", "selected": true},
                {"key": "js", "value": "JavaScript"},
                {"key": "json", "value": "JSON"},
                {"key": "html", "value": "HTML"},
                {"key": "md", "value": "Markdown"},
                {"key": "css", "value": "CSS"},
                {"key": "nginx", "value": "Nginx"},
            ]) }}
            </span>
            <span class="inline-flex items-center">
                {{ checkbox_field("indent2", "indent 2 spaces", indent2) }}
            </span>
        </div>

        <div>
            {{ textarea("content", content, attrs={"rows": 20, "autofocus": true}) }}
{#            <textarea rows="20" name="content" id="content" class="font-mono block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">{{ content }}</textarea>#}
        </div>
    </form>

{% endblock %}
